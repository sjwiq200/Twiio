<?xml version="1.0" encoding="utf-8" ?>

<!-- Layout Definition : Layout 충첩 및 ETC -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
        >
<!-- Layout Definition : Layout 충첩 및 ETC -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainPlanMainLinear">

    <LinearLayout
        android:id="@+id/mainPlanFirstLinear"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="@drawable/planborder"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_2"
            android:layout_margin="5dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainPlanSecondLinear"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="@drawable/planborder"
         >

        <RelativeLayout
            android:id="@+id/mainPlanRelat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="5dp">

            <TextView
                android:id="@+id/titleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:paddingTop="13dp"
                android:textAlignment="center"
                android:fontFamily="@font/jejugothic"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/jejugothic"
                />

            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="국가"
                android:textSize="10dp"
                android:paddingTop="85dp"
                android:textAlignment="center"
                android:fontFamily="@font/jejugothic"
                />
            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도시"
                android:textSize="15dp"
                android:paddingTop="110dp"
                android:textAlignment="center"
                android:fontFamily="@font/jejugothic"
                />

    </RelativeLayout>

    </LinearLayout>


</LinearLayout>


</LinearLayout>




